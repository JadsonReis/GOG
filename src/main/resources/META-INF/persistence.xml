<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
	<persistence-unit name="ouvidoriaPersistenceUnit">
<!-- 		<jta-data-source>java:/datasources/GOGDSPostreSQL</jta-data-source> -->
		<jta-data-source>java:/datasources/OuvidoriaDS</jta-data-source>
		<properties>
			<!-- Properties for Hibernate -->
			<!--  <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" /> -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.enable_lazy_load_no_trans" value="true" />
			<!-- <property name="hibernate.hbm2ddl.auto" value="update" />  -->    
			<!-- Executar atualização do modelo, conforme o servidor de banco de dados da aplicação. -->
			<!-- Caso o usuário da conexão NÃO SEJA OWNER do banco de dados, deve executar o script diretamente no SGBD -->
			<property name="javax.persistence.sql-load-script-source" value="src/main/resources/atualizacaoModelo_SQLSERVER.sql" />
			<!--  <property name="javax.persistence.sql-load-script-source" value="src/main/resources/atualizacaoModelo_POSTGRESQL.sql" />  -->
		</properties>
	</persistence-unit>
</persistence>